<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"

    tools:context="mysecondapplication.android.com.mysecondapplication.StartMenuAct"
    android:background="#ff0d007e">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:src="@drawable/titlemenu"

        android:focusableInTouchMode="false"
        android:background="#ffc2c2c2" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gridLayout2"
        android:layout_below="@+id/imageView">


        <TextView
            android:id="@+id/displaySpeed"
            android:layout_width="fill_parent"
            android:layout_height="119dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="#ffffffff"
             />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="TEXT TO SPEECH"
                android:id="@+id/button"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="25dp"
                android:background="@drawable/custom_btn_arsenic"
                android:onClick="onClickTextToSpeech"
                style ="@style/btnStyleArsenic"
                />
        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="135dp"
            android:layout_row="4"
            android:layout_column="1">

            <Button

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="TEXT ONLY"
                android:id="@+id/button2"
                android:layout_row="4"
                android:layout_column="1"
                android:textSize="25dp"
                android:background="@drawable/custom_btn_genoa"
                android:textColor="#ffffffff"
                android:onClick="onClickTextOnly"
                style ="@style/btnStyleGenoa"
                />

        </GridLayout>
    </GridLayout>
</RelativeLayout>

